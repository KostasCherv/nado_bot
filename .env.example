# Wallet private key (with 0x prefix)
PRIVATE_KEY=0x...

# Chain environment: "inkTestnet" or "inkMainnet"
CHAIN_ENV=inkTestnet

# Subaccount name (default is "default")
SUBACCOUNT_NAME=default

# Product IDs (check Nado docs for current IDs)
BTC_PERP_PRODUCT_ID=4
ETH_PERP_PRODUCT_ID=3

# Order sizes per level
ORDER_SIZE_BTC=0.01
ORDER_SIZE_ETH=0.1

# Take-profit and stop-loss percentages from entry
TP_PERCENT=1.5
SL_PERCENT=0.75

# Order expiration in seconds from now (default 30 days)
ORDER_EXPIRATION_SECONDS=2592000

# Log level: "debug" | "info" | "warn" | "error"
LOG_LEVEL=info

# ========== DYNAMIC LEVELS CONFIGURATION ==========
# How often to recalculate levels (in minutes)
LEVEL_REFRESH_MINUTES=60

# How many hours of historical data to use for pivot calculation
LOOKBACK_HOURS=24

# Number of resistance levels to calculate (R1, R2, ...)
R_LEVELS_COUNT=2

# Number of support levels to calculate (S1, S2, ...)
S_LEVELS_COUNT=2
